ServerAliveInterval 10
ServerAliveCountMax 6
TCPKeepAlive yes

Host *
    # Avoid "Write Failed: broken pipe" (see 
    # http://askubuntu.com/questions/127369/how-to-prevent-write-failed-broken-pipe-on-ssh-connection)
    ServerAliveInterval 30

