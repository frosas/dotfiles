# shellcheck shell=bash
# vim: filetype=bash

# Based on https://github.com/nvm-sh/nvm#git-install

export NVM_DIR=~/.nvm
source /usr/local/opt/nvm/nvm.sh --no-use

# Automatically call nvm use
# Inspired in https://github.com/creationix/nvm#automatically-call-nvm-use

cdnvm() {
    command cd "$@" || return $?
    nvm install 2>/dev/null || nvm use default
}

alias cd='cdnvm'
cdnvm "$PWD" || exit