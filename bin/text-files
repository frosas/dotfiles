#!/bin/bash

# -z in sort is to work correctly when -print0 is used (see grep-text)

find . \
    \( -name .git -or -name .svn -or -name _notes \) -prune -or \
    -type f \
    -not -iname '*.jpg' -not -iname '*.png' -not -iname '*.gif' \
    -not -name '*.swp' \
    -not -name .DS_Store \
    "$@" \
    -print | sort -zf
