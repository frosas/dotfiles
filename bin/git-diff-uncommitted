#!/bin/bash

# Like git diff but for all uncommited files (including untracked ones)
#
# Based on http://stackoverflow.com/a/4864668/337172

function echo-info {
	DARK_GRAY="\033[1;30m"
	echo -e "$DARK_GRAY$1"
}

function title {
	echo-info
	echo-info "################################################################################"
	echo-info "#"
	echo-info "# $1"
	echo-info "#"
	echo-info "################################################################################"
	echo-info
}

DIFF="git diff --color -b -C"

PAGER=$(git config --get core.pager)

(
	echo-info "Note: spaces are ignored."

	title STAGED
	$DIFF --cached "$@" | $PAGER

	title UNSTAGED
	$DIFF "$@" | $PAGER

	title UNTRACKED
	git ls-files --others --exclude-standard -z "$@" | while read -dr $'\0' FILE; do
		$DIFF /dev/null "$FILE"
	done | $PAGER

) | less --tabs=2 --no-init --quit-if-one-screen --RAW-CONTROL-CHARS
