#!/bin/bash

set -e # Exit on errors

# Stores deleted files to user trash instead of deleting it

function absolute_path {
    _PATH=$1
    cd `dirname "$_PATH"` && pwd
}

function move_file {
    FROM=$1; TO=$2
    mkdir -p "$TO" && mv "$FROM" "$TO"
}

FILE=$1
move_file "$FILE" "$HOME/.Trash/`date +%Y-%m-%d-%H:%M:%S``absolute_path $FILE`"
